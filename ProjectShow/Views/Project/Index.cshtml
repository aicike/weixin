@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model PagedList<Entity.Project>
<div class="TitleDIV">@Html.ActionLink("添加", "Add", "Project")</div>
<table class="Tab_list" cellpadding="0" cellspacing="0">
    <tr>
        <th style="width: 150px">
            项目名称
        </th>
        <th>
            软文资讯
        </th>
        <th>
            客户信息
        </th>
        <th>
            状态
        </th>
        <th style="width: 150px;">
            操作
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.PName
            </td>
            <td class="Operation">
                <a>点击查看</a>
            </td>
            <td class="Operation">
                <a href="@Url.Action("Index", "CustomerInfo", new { PID = item.ID })" target="_blank">
                    客户信息</a>
            </td>
            <td>
                @(item.IsEnabled == true ? "启用" : "禁用")
            </td>
            <td class="Operation">
                @Html.ActionLink("修改", "Edit", "Project", new { id = item.ID })
                @Ajax.ActionLink("删除", "Delete", "Project", new { id = item.ID }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('确定删除?删除此项将会删除其关联的所有数据！','" + Url.Action("Delete", "Project", new { id = item.ID }) + "',null)" })
                <br />
                @Html.ActionLink("你想留下客户哪些信息", "Index", "CProblem", new { PID = item.ID }, null)
            </td>
        </tr>
    }
</table>
<div style="margin-top: 20px;">
    @Html.Pager(Model, new PagerOptions
   {
       PageIndexParameterName = "ID",
       CurrentPagerItemWrapperFormatString = "<span class=\"pagenum_selected\"><a>{0}</a></span>",
       NumericPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       NavigationPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       CssClass = "manage_pages pages",
       SeparatorHtml = "&nbsp;",
       AutoHide = false,
       PageIndexOutOfRangeErrorMessage = "页超出范围。",
       ShowFirstLast = false
   })
</div>
