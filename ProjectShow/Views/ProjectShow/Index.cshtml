@{

    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
@section head{
 <link rel="stylesheet" type="text/css" href="@Url.Content("/Scripts/ClassBtn/style.css")" />
    <script>
   
        $(function () {
            setDivHeight();
            setDivWidth();
        });

        $(window).resize(function () {
            var width = $(window).width();
            var tableWidth = $("#MainTable").width();
            if (width < tableWidth) {
                $("#MainTable").width(width);
            }

        });
        function setDivHeight() {
            var height = $(window).height();
            $("#BGDiv").height(height);
//            $("#MainTable").height(height);
        }
        function setDivWidth() {
            var width = $(window).width();
            $("#MainTable").width(width);
        }
    </script>
    <style>
        body
        {
            margin: 0px;
        }
        .BGDiv
        {
            width: 100%;
            overflow: hidden;
            z-index: 100;
        }
        .MainDiv
        {
            top: 0px;
            position: absolute;
            text-align:center;
            width:100%;
         }
        .MainTable
        {
            width:100%;
            height:370px;
        }
        .MainTable td
        {
        }
        
    </style>
}
@model Entity.EnterpriseInfo
<div class="BGDiv" id="BGDiv">
    <img src="@Url.Content("~/Image/AppDefault.png")" style=" width:100%; max-width:100%;" />
</div>
<div class="MainDiv">
        <table class="MainTable" id="MainTable" align="center">
    <tr style="height: 10%">
        <td align="left" style=" padding-left:10px">
        @if (string.IsNullOrEmpty(Model.Logo))
        { 
            <img src="@Url.Content("/Image/logo.png")" style="height:1.5em" />
        }
        else { 
            <img src="@Url.Content(Model.Logo)" style="height:1.5em" />
        }
        </td>
    </tr>
    <tr style="height: 50%">
        <td>
                
        </td>
    </tr>
    <tr style="height: 30%">
        <td align="center"  >
             
              <a href="@Url.Action("ProjectClass", "ProjectShow", new {EID= ViewBag.EID })"  data-role='none'   class="abutton abutton-orange"><span>@Model.ButtonName</span></a>
        </td>
    </tr>
    <tr style="height: 5%">
        <td>
            ©@Model.SName    西安斯维尔
        </td>
    </tr>
    <tr style="height: 15%">
        <td>
            
        </td>
    </tr>
</table>

</div>
