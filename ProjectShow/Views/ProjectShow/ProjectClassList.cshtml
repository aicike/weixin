@{
    Layout = "~/Views/Shared/_AppSecondaryLayout.cshtml";
}
@section head{
    <!-- 移动图片播放 -->
    <link href="@Url.Content("/Scripts/Swipe/css/swipe.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("/Scripts/Swipe/js/swipe.min.js")" type="text/javascript"></script>
    

    <script>
        var color = ["#66CDAA", "#AB82FF", "#5CACEE", "#EEB422", "#FF8247"];
        var colorIndex = 0;
        $(function () {
            var bullets = document.getElementById('position').getElementsByTagName('li');
            var banner = Swipe(document.getElementById('mySwipe'), {
                auto: 5000,
                continuous: true,
                disableScroll: false,
                callback: function (pos) {
                    var i = bullets.length;
                    while (i--) {
                        bullets[i].className = ' ';
                    }
                    bullets[pos].className = 'cur';
                }
            });
        });

        function tz() {
            window.location.href = "@Url.Action("ProjectInfo", "ProjectShow")";
        }
    </script>
    <style>
        .grid
        {
            cursor: pointer;
            height: 135px;
            width: 97% !important;
            background-color: #fff;
            box-shadow: 0 1px 6px rgba(34,25,25,0.4);
            overflow: hidden;
            margin-bottom: 0.5em;
            border-radius: 5px;
            margin-left: auto;
            margin-right: auto;
        }
       .MainTab
        {
            width: 100%;
            height: 135px;
        }
        
        .MainTab td
        {
            cursor: pointer;
        }
        .TitDIVLeft
        {
            text-shadow: none;
            color: #ffffff;
            padding-left: 10px;
            font-weight: bold;
            font-size: 18px;
        }
         .TitDIVRight
        {
            text-shadow: none;
            color: #ffffff;
            padding-right: 10px;
            font-weight: bold;
            font-size: 18px;
            text-align: right;
        }
        
        .ImgDIV
        {
            width: 100%;
            height: 135px;
            background-color: #ffeedd;
            overflow: hidden;
            max-width:300px;
        }
        .ShowImg
        {
            width: 100%;
            
            min-height: 135px;
        }
    </style>
}
