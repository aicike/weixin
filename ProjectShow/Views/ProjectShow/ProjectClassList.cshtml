@{
    Layout = "~/Views/Shared/_AppSecondaryLayout.cshtml";
}
@section head{
    <!-- 移动图片播放 -->
    <link href="@Url.Content("/Scripts/Swipe/css/swipe.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("/Scripts/Swipe/js/swipe.min.js")" type="text/javascript"></script>
    <script>
        var color = ["#66CDAA", "#AB82FF", "#5CACEE", "#EEB422", "#FF8247"];
        var colorIndex = 0;
        $(function () {
            //幻灯片
            var bullets = document.getElementById('position').getElementsByTagName('li');
            var banner = Swipe(document.getElementById('mySwipe'), {
                auto: 5000,
                continuous: true,
                disableScroll: false,
                callback: function (pos) {
                    var i = bullets.length;
                    while (i--) {
                        bullets[i].className = ' ';
                    }
                    bullets[pos].className = 'cur';
                }
            });

            //控制颜色
            $(".MainTab").each(function(){
                $(this).attr("style","background-color:"+color[colorIndex]);
                colorIndex=colorIndex+1;
                if(colorIndex>4)
                {
                colorIndex=0;
                }
            });
        });

        function tz(NID) {
            var URl = "@Url.Action("ProjectInfo", "ProjectShow")"+"?NID="+NID+"&PID=@ViewBag.PID&EID=@ViewBag.EID";
            window.location.href = URl;
        }
    </script>
    <style>
        .grid
        {
            cursor: pointer;
            height: 130px;
            width: 97% !important;
            background-color: #fff;
            box-shadow: 0 1px 6px rgba(34,25,25,0.4);
            overflow: hidden;
            margin-bottom: 0.5em;
            border-radius: 5px;
            margin-left: auto;
            margin-right: auto;
        }
        .MainTab
        {
            width: 100%;
            height: 130px;
        }
        
        .MainTab td
        {
            cursor: pointer;
        }
        .TitDIVLeft
        {
            text-shadow: none;
            color: #ffffff;
            padding-left: 10px;
            font-weight: bold;
            font-size: 18px;
        }
        .TitDIVRight
        {
            text-shadow: none;
            color: #ffffff;
            padding-right: 10px;
            font-weight: bold;
            font-size: 18px;
            text-align: right;
        }
        
        .ImgDIV
        {
            width: 100%;
            height: 130px;
            background-color: #ffeedd;
            overflow: hidden;
            max-width: 300px;
        }
        .ShowImg
        {
            width: 100%;
            min-height: 100%;
        }
        .addWrap img
        {
            width: 100%;
        }
    </style>
}
@{
    var projectimgs = ViewBag.projectimgs as List<Entity.ImageInfo>;
}
@model List<Entity.New>
<div data-role="content" style="padding: 0px;">
    <div class="addWrap" style="margin-bottom: 5px; max-height: 295px; overflow: hidden">
        <div class="swipe" id="mySwipe">
            <div class="swipe-wrap">
                @foreach (var item in projectimgs)
                {
                    <div>
                        <a>
                            <img class="img-responsive" src="@Url.Content(item.Path)" />
                        </a>
                    </div>
                }
            </div>
        </div>
        <ul id="position">
            <li class="cur"></li>
            @for (int i = 1; i < projectimgs.Count; i++)
            {
                
                <li class=""></li>
            }
        </ul>
    </div>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="grid">
            <table class="MainTab" cellpadding="0" cellspacing="0"
                onclick="tz(@Model[i].ID)">
                <tr>
                    <td style="width: 30%;">
                        <div class="TitDIVLeft">
                            @Model[i].Title
                        </div>
                    </td>
                    <td style="width: 70%;" align="right">
                        <div class="ImgDIV">
                            <img class="ShowImg" src="@Url.Content(Model[i].Image)" />
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        i++;
        if (i < Model.Count())
        {
            <div class="grid">
                <table class="MainTab" cellpadding="0" cellspacing="0"
                    onclick="tz(@Model[i].ID)">
                    <tr>
                        <td style="width: 70%;" align="left">
                            <div class="ImgDIV">
                                <img class="ShowImg" src="@Url.Content(Model[i].Image)" />
                            </div>
                        </td>
                        <td style="width: 30%;">
                            <div class="TitDIVRight">
                                @Model[i].Title
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        }
    }
</div>
