@{
    
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
@section head{
    <script src="@Url.Content("/Scripts/BlockSit/blocksit.js")" type="text/javascript"></script>
    <link href="@Url.Content("/Scripts/BlockSit/homeStyle.css")" rel="stylesheet" type="text/css" />
    <script>
        var color = ["#66CDAA", "#AB82FF", "#5CACEE", "#EEB422", "#FF8247"];
        var colorIndex = 0;
        $(function () {


            //            //控制颜色
            //            $(".MainTab").each(function(){
            //                $(this).attr("style","background-color:"+color[colorIndex]);
            //                colorIndex=colorIndex+1;
            //                if(colorIndex>4)
            //                {
            //                colorIndex=0;
            //                }
            //            });

            $(window).load(function () {
                $('.BlocksIt').show();
                var width = $(".grid").width();
                $(".grid").height(width / 2);
                $('.BlocksIt').BlocksIt({
                    numOfCol: 1,
                    offsetX: 0,
                    offsetY: 6,
                    blockElement: ".grid"

                });
            });


            $(window).resize(function () {
                var width = $(".grid").width();
                $(".grid").height(width / 2);
                $('.BlocksIt').BlocksIt({
                    numOfCol: 1,
                    offsetX: 0,
                    offsetY: 8,
                    blockElement: ".grid"

                });
            });

        });

       
    </script>
    <style>
        .grid
        {
            width: 100% !important;
            overflow: hidden;
            border-radius: 5px;
        }
        
        .grid img
        {
            width: 100%;
            max-width: 100%;
        }
        .PnameBg
        {
            width: 130px;
            height: 50px;
            text-align: center;
            color: #fff;
            left: 0px;
            top: 25px;
            position: absolute;
            font-weight: bold;
            font-size: 1.4em;
            line-height: 50px;
            overflow: hidden;
            background: rgba(0,0,0,0.4);
            text-decoration: none;
        }
    </style>
}
@model List<Entity.Project>
<div data-role="content" style="padding-top: 0px; padding-left: 10px; padding-right: 10px">
    <div class="BlocksIt" style="display: none">
        @foreach (var item in Model)
        {
            <div class="grid">
                <a href="@Url.Action("ProjectClassList", "ProjectShow", new { PID = item.ID, EID = ViewBag.EID })" style=" text-decoration:none">
                    <img src="@Url.Content(item.ImageInfos.FirstOrDefault().Path)" />
                </a>
                <div class="PnameBg">
                    @item.PName
                </div>
            </div>
        }
    </div>
</div>
<div style="text-align: center; height: 30px; background-image: url('/Image/item_line.png');
    background-repeat: repeat-x; padding-top: 10px">
    ©@ViewBag.SName 西安斯维尔
</div>
