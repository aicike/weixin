@{
    Layout = "~/Views/Shared/_CustomerInfoLayout.cshtml";
}
@model System.Data.DataTable
<div class="Div_Title">
    项目/产品 -> @ViewBag.ProjectName
</div>
<div class="TitleDIV">
    @Html.ActionLink("导出到Excel表", "ExportExcel", "CustomerInfo", new { PID = ViewBag.PID }, null)
</div>
<div>
    <table class="Tab_list" cellpadding="0" cellspacing="0" name="tab">
        <tr>
            @foreach (var item in Model.Columns)
            {
                <th>
                    @item.ToString()
                </th>
            }
        </tr>
        @foreach (System.Data.DataRow item in Model.Rows)
        {
            <tr>
                @foreach (var item2 in Model.Columns)
                {
                    <td>
                        @item[item2.ToString()]
                    </td>
                }
            </tr>
        }
    </table>
</div>
