@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>后台登陆</title>
    <script src="@Url.Content("/Scripts/jquery-1.8.3.min.js")"  type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.validate-vsdoc.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script>
        $(function () {
            SetMainHeight()
        });
        window.onresize = function () {
            SetMainHeight()
        }

        function SetMainHeight() {
            $("#Main_div").css("height", $(window).height() + "px");
        }
    </script>
    <style>
        body
        {
            margin: 0px;
        }
        .div_count
        {
            margin-left: auto;
            margin-right: auto;
            border-radius: 10px;
            width: 400px;
            height: 320px;
            box-shadow: #9fa4c9 0px 0px 10px;
            margin-top: 200px;
            position: relative;
            background: #fff;
        }
        .div_count .bottom
        {
            width: 100%;
            bottom: 10px;
            position: absolute;
            text-align: center;
            color: #6f7b91;
            font-size: 14px;
        }
        .div_count .top
        {
            width: 100%;
            height: 60px;
            background: #c4e5ea;
            border-radius: 10px 10px 0px 0px;
        }
        .div_count .top img
        {
            height: 40px;
            margin-top: 10px;
            margin-left: 10px;
        }
        .div_count .toplast
        {
            width: 350px;
            height: 40px;
            background: #424242;
            margin-top: 20px;
            left: -15px;
            position: absolute;
            color: #fff;
            overflow: hidden;
            line-height: 40px;
            font-weight: bold;
            font-size: 20px;
            padding-left: 50px;
        }
        .div_count .triangle-topleft
        {
            border-top: 10px solid #000;
            border-left: 15px solid transparent;
            margin-top: 60px;
            left: -15px;
            position: absolute;
        }
        .div_count .name
        {
            width: 100%;
            height: 45px;
            margin-top: 75px;
            color: #6f7b91;
            font-weight: bold;
            padding-left: 35px;
        }
        .div_count .pwd
        {
            width: 100%;
            height: 45px;
            color: #6f7b91;
            font-weight: bold;
            padding-left: 35px;
        }
        .div_count .login
        {
            width: 100%;
            height: 45px;
            text-align: center;
            margin-top: 20px;
        }
        .input_text
        {
            width: 270px;
            height: 30px;
            padding-left: 5px;
        }
        .input_btuuon
        {
            width: 320px;
            height: 40px;
            background: #4fc2b9;
            border: 0;
            border-radius: 5px;
            color: #fff;
            font-weight: bold;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="Main_div" style="width: 100%; overflow: hidden; background-image: linear-gradient( #4f8ed3, #789ecd);">
        <div class="div_count">
            @using (Ajax.BeginForm("SystemLogin", "Login", new AjaxOptions() { UpdateTargetId = "alert" }))
            {   
                <div class="top">
                    <img src="../../Image/Logo_144.png" /><img src="../../Image/logo.png" />
                </div>
                <div class="toplast">
                    后台登陆
                </div>
                <div class="triangle-topleft">
                </div>
                <div class="name">
                    账号：<input type="text" id="Name" name="Name" class="input_text" placeholder="登陆账号" />
                </div>
                <div class="pwd">
                    密码：<input type="password" id="Pwd" name="Pwd" class="input_text" placeholder="密码" />
                </div>
                <div class="login">
                    <input type="submit" id="sub_btn" value="登 陆" class="input_btuuon" />
                </div>
                <div class="bottom">
                    ©西安市斯维尔信息技术有限公司
                </div>
            }
        </div>
    </div>
</body>
</html>
