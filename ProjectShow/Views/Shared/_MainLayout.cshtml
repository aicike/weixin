<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("/Scripts/EjectOptions/js/jquery-1.7.2.min.js")"  type="text/javascript"></script>
    <script>
        $(function () {
            SetMainHeight()
        });
        window.onresize = function () {
            SetMainHeight()
        }

        function SetMainHeight() {
            $("#Main_div").css("height", $(window).height()+"px");
        }
    </script>
    <style>
        body
        {
            margin: 0px;
            color: #6f7b91;
        }
        .header
        {
            margin-top: 35px;
            height: 55px;
            width: 960px;
            background: #8895b4;
            margin-left: auto;
            margin-right: auto;
        }
        
        .topHead_left
        {
            float: left;
            height: 55px;
            line-height: 55px;
            overflow: hidden;
        }
        
        .topHead_right
        {
            float: right;
            width: 210px;
            height: 55px;
            background: #7a85a2;
            color: #fff;
            line-height: 55px;
            overflow: hidden;
            text-align: center;
            font-size: 14px;
        }
        
        .MeunA
        {
            color: #fff;
            text-decoration: none;
            margin-left: 10px;
            font-size: 14px;
            margin-right: 10px;
            padding: 20px 0px;
        }
        .MeunA_Sel
        {
            color: #fff;
            font-weight: bold;
            font-size: 16px;
            text-decoration: none;
            margin-left: 10px;
            margin-right: 10px;
            padding: 20px 0px;
        }
        .MeunA:hover
        {
            font-weight: bold;
            font-size: 16px;
        }
        
        
        .Div_Title
        {
            font-size: 30px;
            margin-bottom: 15px;
        }
        .main
        {
            width: 100%;
            min-height: 680px;
            background: #f0f4fb;
            margin-bottom:25px;
        }
    </style>
    @RenderSection("head", required: false)
</head>
<body>
    <div id="Main_div" style=" width:100%; overflow:auto">
        <div style="box-shadow: #9fa4c9 0px 0px 10px; width: 960px; margin: auto auto;">
            <div class="header">
                <div class="topHead_left">
                    <div style="float: left;">
                        <img src="../../Image/logo_144.png" style="height: 45px; margin-left: 20px; margin-top: 5px;
                            margin-right: 10px;" />
                    </div>
                    <div style="float: left">
                        <a class="MeunA_Sel" href="@Url.Action("Index","Default")">首页 </a>
                    </div>
                    <div style="float: left">
                        <a class="MeunA" href="@Url.Action("Index","Project")">项目/产品 </a>
                    </div>
                    <div style="float: left">
                        <a class="MeunA" href="">账号设置 </a>
                    </div>
                    <div style="clear: both">
                    </div>
                </div>
                <div class="topHead_right">
                    您好 xxx 退出
                </div>
                <div style="clear: both">
                </div>
            </div>
            <table cellpadding="0" cellspacing="0" class="main">
                <tr valign="top">
                    <td style="padding: 25px 50px">
                        @RenderBody()
                    </td>
                    <td style="width: 190px; background: #fff; padding: 25px 10px; font-size: 14px; line-height: 20px">
                        项目启用日期：14-02-22<br />
                        项目截止日期：15-02-22
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
