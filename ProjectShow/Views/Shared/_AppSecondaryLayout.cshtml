<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no" />
    <meta name="Description" content="8000万钜惠！西安万科首届购房节惠献全城 ">
    <meta name="Keywords" content="8000万钜惠！西安万科首届购房节惠献全城2 ">
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("/Scripts/EjectOptions/js/jquery-1.7.2.min.js")"  type="text/javascript"></script>
    <script type="text/javascript">
        $(document).bind("mobileinit", function () {
            //            // disable ajax nav
            $.mobile.ajaxEnabled = false
        });
    </script>
    <script src="@Url.Content("~/Scripts/JqueryMobile/jquery.mobile-1.4.0.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/JqueryMobile/jquery.mobile-1.4.0.min.css")"  rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/EjectOptions/js/rotate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/EjectOptions/js/jquery.transform.js")" type="text/javascript"></script>
    <link href="@Url.Content("/Scripts/EjectOptions/css/css.css")"  rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/WeixinShare/ShareAssembly.js")" type="text/javascript"></script>
    <script type="text/javascript">

        //判断是否为移动端
        var ua = window.navigator.userAgent.toLowerCase();
        if (ua.indexOf('mobile') != -1) {
            //Is mobile

        }
        else {
            //Not mobile
        }

        //屏蔽选中文本
        var omitformtags = ["input", "textarea", "select"]
        omitformtags = omitformtags.join("|")
        function disableselect(e) {
            if (omitformtags.indexOf(e.target.tagName.toLowerCase()) == -1)
                return false
        }
        function reEnable() {
            return true
        }
        if (typeof document.onselectstart != "undefined")
            document.onselectstart = new Function("return false")
        else {
            document.onmousedown = disableselect
            document.onmouseup = reEnable
        }

        //屏蔽右键
        document.oncontextmenu = function () { return false; }
        //分享
        _WXShare('@if(string.IsNullOrEmpty(ViewBag.BgImage)){@Url.Content("/Image/AppDefault.png")}else{@Url.Content(ViewBag.BgImage)}', '76', '76', '@ViewBag.ShareTitle', '@ViewBag.ShareRemark', '');

    </script>
    <style>
        /* 屏蔽长按*/
        *
        {
            -webkit-user-select: none;
            -webkit-touch-callout: none;
            text-shadow:none;
        }
        body{
            
            
        }
        input
        {
            -webkit-user-select: auto;
        }
        
        img{
            border:0;
        }
        .drawer
        {
            background:url(/images/WeiBGimg.jpg);
            @*filter:alpha(opacity=50);  
            -moz-opacity:0.5;  
            -khtml-opacity: 0.5;  
            opacity: 0.5;  *@
            
        }
        .ui-panel-inner
        {
            padding:0px !important;
        }
        .div_LJ
        {
            width:100%;
            height:50px;
            text-shadow: none;
            font-size:18px;
            color:#fff;
             
        }
        .div_tab
        {
         width:100%;
           height:50px;
        }
    </style>
    @RenderSection("head", required: false)
</head>
<body>
    <div data-role="page">
        @RenderBody()
        <div style="text-align: center; height: 30px; background-image: url('/Image/item_line.png');
            background-repeat: repeat-x; padding-top: 10px">
            ©xxxx 西安斯维尔
        </div>
    </div>
    <div class="PathInner" id="PathMenu" style="right: 10px; bottom: 10px; position: fixed">
        <div class="PathMain">
            <div class="Tmain" onclick="PathRun();">
                <div class="rotate" data-transform="rotate(0deg)">
                    <span class="cover"></span>
                </div>
            </div>
        </div>
        <div class="PathItem">
            <a class="link" href="@Url.Action("CustomerInfo", "ProjectShow", new { PID = ViewBag.PID, EID = ViewBag.EID })" title="报名预约" data-role='none'><span class="item" style="background-image: url(/Scripts/EjectOptions/images/moment_icn_pic.png);
                -moz-transform: rotate(0deg);" data-transform="rotate(0deg)"></span></a>
        </div>
        <div class="PathItem">
            <a class="link" href="tel:@ViewBag.Phone" title="打电话"><span class="item" style="background-image: url(/Scripts/EjectOptions/images/moment_icn_info.png);
                -moz-transform: rotate(0deg);" data-transform="rotate(0deg)"></span></a>
        </div>
        <div class="PathItem">
            <a class="link" href="http://api.map.baidu.com/marker?location=@ViewBag.Lat,@ViewBag.Lng&title=@ViewBag.PName&name=@ViewBag.PName&content=@ViewBag.MapAddress&output=html"
                title="地理位置"><span class="item" style="background-image: url(/Scripts/EjectOptions/images/moment_icn_address.png);
                    -moz-transform: rotate(0deg);" data-transform="rotate(0deg)"></span></a>
        </div>
        <div class="PathItem">
            <a class="link" href="@Url.Action("ProjectClass", "ProjectShow", new { EID = ViewBag.EID })" title="首页"><span class="item" style="background-image: url(/Scripts/EjectOptions/images/moment_icn_price.png);
                -moz-transform: rotate(0deg);" data-transform="rotate(0deg)"></span></a>
        </div>
    </div>
</body>
</html>
